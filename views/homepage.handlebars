
         {{#unless userInfo}}
         <section id="new-post" class="d-flex flex-column m-auto mt-3 p-3 rounded justify-content-center w-50">
            <div id="new-post-screen" class="d-flex flex-column text-center">
                <div id="new-post-title-div" class="mt-3">
                    <h5>Log in or create a new account to comment on other's posts and view your own dashboard!</h5>
                </div>
        </section>
        {{/unless}}
        <section id="post-sect" class="d-flex flex-column w-50 m-auto mt-3 p-3 rounded">
            {{#each mappedPost as |post|}}
            {{> post-partial}}
            {{/each}}
        </section>
        <script src="/js/homepage.js"></script>